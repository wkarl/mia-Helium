<?xml version="1.0" encoding="UTF-8"?>

<FindBugsFilter>
  <!-- Exclude Android R -->
  <Match>
    <Class name="~.*\.R\$.*"/>
  </Match>

  <!-- Exclude Android Manifest -->
  <Match>
    <Class name="~.*\.Manifest\$.*"/>
  </Match>

  <!-- Exclude Tests -->
  <Match>
    <Class name="~.*\.*Test.*" />
    <Not>
      <Bug code="IJU" /> <!-- 'IJU' is the code for bugs related to JUnit test code -->
    </Not>
  </Match>

  <!-- Exclude Mocks -->
  <Match>
    <Class name="~.*\.*Mock.*" />
  </Match>

  <!-- Exclude LruCache lib -->
  <Match>
    <Class name="~.*\.*LruCache.*" />
  </Match>

  <!-- Exclude Fastscroller lib -->
  <Match>
    <Class name="~.*\.*RecyclerViewFastScroller.*" />
  </Match>
</FindBugsFilter>
